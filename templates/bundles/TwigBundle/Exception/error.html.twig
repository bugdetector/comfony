{% set title = status_text|trans %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center">
            <h1 class="mb-4 text-7xl tracking-tight font-extrabold lg:text-9xl text-primary-600 dark:text-primary-500">{{ status_code }}</h1>
            <p class="mb-4 text-3xl tracking-tight font-bold text-gray-900 md:text-4xl dark:text-white">{{ status_text|trans }}</p>
            <p class="mb-4 text-lg font-light text-gray-500 dark:text-gray-400">{% trans %}Sorry, an unknown error occured.{% endtrans %}</p>
            <a href="{{ path('homepage') }}" class="inline-flex text-white bg-blue-600 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:focus:ring-blue-900 my-4">{% trans %}Back to Homepage{% endtrans %}</a>
        </div>   
    </div>
{% endblock %}