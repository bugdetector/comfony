<div class="fixed flex flex-col top-14 left-0 w-14 hover:w-64 md:w-64 bg-slate-900 dark:bg-gray-900 h-full text-white transition-all duration-300 border-none z-10 sidebar">
	<div class="overflow-y-auto overflow-x-hidden flex flex-col justify-between flex-grow">
		<ul class="flex flex-col py-4 space-y-1">
			<li>
				<a href="{{ path('homepage') }}" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-blue-800 dark:hover:bg-gray-600 text-white-600 hover:text-white-800 border-l-4 border-transparent hover:border-blue-500 dark:hover:border-gray-800 pr-6">
					<span class="inline-flex justify-center items-center ml-4">
						<span class="i-tabler-home"></span>
					</span>
					<span class="ml-2 text-sm tracking-wide truncate">{% trans %}Home{% endtrans %}</span>
				</a>
			</li>
			{% if is_granted('ROLE_ADMIN') %}
				<li>
					<a href="{{ path('app_admin') }}" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-blue-800 dark:hover:bg-gray-600 text-white-600 hover:text-white-800 border-l-4 border-transparent hover:border-blue-500 dark:hover:border-gray-800 pr-6">
						<span class="inline-flex justify-center items-center ml-4">
							<span class="i-tabler-dashboard"></span>
						</span>
						<span class="ml-2 text-sm tracking-wide truncate">{% trans %}Dashboard{% endtrans %}</span>
					</a>
				</li>
				<li>
					<a href="{{ path('app_admin_users_index') }}" class="relative flex flex-row items-center h-11 focus:outline-none hover:bg-blue-800 dark:hover:bg-gray-600 text-white-600 hover:text-white-800 border-l-4 border-transparent hover:border-blue-500 dark:hover:border-gray-800 pr-6">
						<span class="inline-flex justify-center items-center ml-4">
							<span class="i-tabler-users"></span>
						</span>
						<span class="ml-2 text-sm tracking-wide truncate">{% trans %}Users{% endtrans %}</span>
					</a>
				</li>
			{% endif %}
		</ul>
		<p class="mb-14 px-5 py-3 hidden md:block text-center text-xs">{{ app_name }}
			@{{ 'now'|date('Y') }}</p>
	</div>
</div>
