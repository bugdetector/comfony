<dialog class="modal modal-bottom sm:modal-middle" id="{{ modalId }}">
	<div class="modal-box text-center">
		<button type="button" class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2 modal-close">
			<i class="i-tabler-x"></i>
		</button>
		<span class="i-tabler-info-circle-filled text-primary mx-auto mb-4 text-8xl"></span>
		<h3 class="text-lg font-bold">
			{% if message is defined %}
				{{ message }}
			{% else %}
				{% trans with {'object': objectName} %}Are you sure you want to delete this :objectName?{% endtrans %}
			{% endif %}
			
		</h3>
		<div class="modal-action">
			<button type="submit" class="btn btn-error">
				{% trans %}Yes{% endtrans %}
			</button>
			<button type="button" class="btn btn-light modal-close">
				{% trans %}No{% endtrans %}
			</button>
		</div>
	</div>
</dialog>
