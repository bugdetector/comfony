{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}
{% block create %}
	<turbo-stream action="prepend" target="files">
		<template>
			{% include "admin/files/file_row.html.twig" with {
				file: entity,
				action: "create"
			} %}
		</template>
	</turbo-stream>
{% endblock %}

{% block update %}
	<turbo-stream action="replace" target="file_{{ id }}">
		<template>
			{% include "admin/files/file_row.html.twig" with {
				file: entity,
				action: "update"
			} %}
		</template>
	</turbo-stream>
{% endblock %}

{% block remove %}
	<turbo-stream action="replace" target="file_{{ id }}">
		<template>
			{% include "admin/files/file_row.html.twig" with {
				file: entity,
				action: "remove"
            } %}
		</template>
	</turbo-stream>
{% endblock %}
