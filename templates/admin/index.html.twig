{% extends 'base.html.twig' %}

{% block body %}
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 p-4 gap-4">
		<div class="card card-side bg-base-100 shadow-sm relative">
			<div class="h-full flex items-center p-3">
				<span class="i-tabler-users text-4xl mt-2"></span>
			</div>
			<div class="card-body flex justify-start">
				<h2 class="card-title">{% trans %}Users{% endtrans %}</h2>
				<p class="text-2xl">{{ user_count }}</p>
				<div class="card-actions justify-end">
					<a href='{{ path('app_admin_users_index') }}' class="btn btn-primary btn-outline after:absolute after:inset-0">{% trans %}Details{% endtrans %}</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
