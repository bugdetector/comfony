{% set action = action is defined ? action : null %}
<tr id="configuration_{{ object.id }}" class='{{ action ? ' action-' ~ action }}'>
    <td class="px-6 py-3">
        <div class="flex gap-2">
            {% if action != 'remove' %}
                <a class="btn btn-sm btn-outline" href="{{ path('app_admin_configuration_edit', {'id': object.id}) }}">
                    <i class="i-tabler-edit text-lg"></i>
                </a>
                {% if action == null %}
                    <form method="post" action="{{ path('app_admin_configuration_delete', {'id': object.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ object.id) }}">
                        {% set modalId = 'delete-modal-' ~ object.id %}
                        <button type='button' class="btn btn-sm btn-error btn-outline" data-controller="modal" data-modal-target-modal-value="{{ modalId }}">
                            <i class="i-tabler-trash text-lg"></i>
                        </button>
                        {% include theme.themeDirectory ~ "/partials/_delete_modal.html.twig" with {modalId: modalId, objectName: "Configuration"|trans} %}
                    </form>
                {% endif %}
            {% endif %}
        </div>
    </td>
    <td class="px-6 py-3">{{ object.id }}</td>
    <td class="px-6 py-3">{{ object.configKey }}</td>
    <td class="px-6 py-3">{{ object.value }}</td>
    <td class='px-6 py-3 text-nowrap'>
        <time>{{ object.createdAt|format_datetime() }}</time>
    </td>
    <td class='px-6 py-3 text-nowrap'>
        <time>{{ object.updatedAt|format_datetime() }}</time>
    </td>
</tr>
