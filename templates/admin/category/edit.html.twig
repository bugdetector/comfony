{% extends 'admin/category/index.html.twig' %}
{% block backLink %}
    <a href="{{ path('app_admin_category_index') }}" class="btn btn-outline">
        <i class="i-tabler-chevron-left"></i>
        {% trans %}Back{% endtrans %}
    </a>
{% endblock %}
{% block body %}
    <div class="flex flex-wrap p-3">
        <div class="md:w-9/12 w-full">              
            {{ component('LiveForms:LiveCategoryFormComponent', { initialFormData: category }) }}
        </div>
    </div>
    {% if category.id %}
        {{ include('admin/category/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
