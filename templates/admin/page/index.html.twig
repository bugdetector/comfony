{% extends 'base.html.twig' %}

{% block actions %}
	<div class="container-fluid flex md:justify-end items-center my-3 gap-5">
		<a href='{{ path('app_admin_page_new') }}' class="btn btn-primary btn-sm">
			<span class="flex justify-center items-center">
				<span class="ki-solid ki-plus-circle text-md me-2"></span>
				{% trans %}Add New Page{% endtrans %}
			</span>
		</a>
		{% if page is defined and page.id %}
			<a href='{{ path('app_page_view', {'slug': page.slug}) }}' data-turbo="false" target="_blank" class="btn btn-info btn-sm">
				<span class="flex justify-center items-center">
					<span class="ki-solid ki-eye text-md me-2"></span>
					{% trans %}View Page{% endtrans %}
				</span>
			</a>
		{% endif %}
		
	</div>
{% endblock %}

{% block body %}
	{{ component('PagesSearchComponent', {listTopic: 'pages'}) }}
{% endblock %}
