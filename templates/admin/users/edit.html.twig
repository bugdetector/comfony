{% extends 'admin/users/index.html.twig' %}

{% block backLink %}
	<div class="flex items-center mx-3 flex-wrap gap-1 lg:gap-5">
		<a href="{{ path('app_admin_users_index') }}" class="btn btn-light">
			<i class="ki-filled ki-left"></i>
			{% trans %}Back{% endtrans %}
		</a>
	</div>
{% endblock %}

{% block body %}
	<div class="flex flex-wrap p-3">
		<div class="md:w-9/12 w-full">
			<div class='mb-3'>
				<label class='font-bold'>{% trans %}Registration Date{% endtrans %}</label>
				<div>{{ user.createdAt|format_datetime('full', 'short') }}</div>
			</div>
			<div class='mb-3'>
				<label class='font-bold'>{% trans %}Last Access{% endtrans %}</label>
				<div>{{ user.lastAccess ? user.lastAccess|format_datetime('full', 'short') : 'Never'|trans }}</div>
			</div>
			{{ include('admin/users/_form.html.twig') }}
		</div>
	</div>
	{{ include('admin/users/_delete_form.html.twig') }}
{% endblock %}
