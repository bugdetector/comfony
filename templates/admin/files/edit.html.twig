{% extends 'admin/files/index.html.twig' %}

{% block backLink %}
	<a href="{{ path('app_admin_files_index') }}" class="btn btn-outline">
		<i class="i-tabler-chevron-left"></i>
		{% trans %}Back{% endtrans %}
	</a>
{% endblock %}

{% block body %}
	<div class="flex flex-wrap p-3">
		<div class="md:w-9/12 w-full">
			<div class='mb-3'>
				<label class='font-bold'>{% trans %}created_at{% endtrans %}</label>
				<div>{{ file.createdAt|format_datetime('full', 'short') }}</div>
			</div>
			<div class='mb-3'>
				<label class='font-bold'>{% trans %}updated_at{% endtrans %}</label>
				<div>{{ file.updatedAt|format_datetime('full', 'short') }}</div>
			</div>				
			{{ component('FilePreviewComponent', {file: file}) }}
			{{ include('admin/files/_form.html.twig') }}
		</div>
	</div>
	{{ include('admin/files/_delete_form.html.twig') }}
{% endblock %}
