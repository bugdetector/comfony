<nav class="flex justify-center mt-5">
	<ul class="flex items-center -space-x-px h-8 text-sm">
		{% if first is defined and current != first %}
			<li>
				<a href="{{ path(route, query|merge({(pageParameterName): first})) }}" class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
					<span class="sr-only">{% trans %}Previous{% endtrans %}</span>
					<span class='i-tabler-chevrons-left'></span>
				</a>
			</li>
		{% endif %}
		{% if previous is defined %}
			<li>
				<a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
					<span class="sr-only">{% trans %}Previous{% endtrans %}</span>
					<span class='i-tabler-chevron-left'></span>
				</a>
			</li>
		{% endif %}
		{% for page in pagesInRange %}
			{% if page != current %}
				<li>
					<a href="{{ path(route, query|merge({(pageParameterName): page})) }}" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
						{{page}}
					</a>
				</li>
			{% else %}
				<li>
					<span class="z-10 flex items-center justify-center px-3 h-8 leading-tight text-blue-600 border border-blue-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white">
						{{page}}
					</span>
				</li>
			{% endif %}
		{% endfor %}

		{% if next is defined %}
			<li>
				<a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
					<span class="sr-only">{% trans %}Next{% endtrans %}</span>
					<span class='i-tabler-chevron-right'></span>
				</a>
			</li>
		{% endif %}

		{% if last is defined and current != last %}
			<li>
				<a href="{{ path(route, query|merge({(pageParameterName): last})) }}" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
					<span class="sr-only">{% trans %}Next{% endtrans %}</span>
					<span class='i-tabler-chevrons-right'></span>
				</a>
			</li>
		{% endif %}
	</ul>
</nav>
