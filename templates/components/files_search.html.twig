{% extends "@base_theme/partials/datatable.html.twig" %}

{% block rows %}
	{% for file in pagination %}
		<tr class='bg-gray-100 hover:bg-gray-200 border-b dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-600'>
			<td class="px-6 py-3">
				<a href="{{ path('app_admin_files_edit', {'id': file.id}) }}">
					<span class='i-tabler-edit text-blue-600 dark:text-gray-200'></span>
				</a>
			</td>
            <td class="px-6 py-3">{{ file.id }}</td>
            <td class="px-6 py-3">{{ file.getFileName() }}</td>
            <td class="px-6 py-3">{{ file.getFileSize() }}</td>
            <td class="px-6 py-3">{{ file.getMimeType() }}</td>
            <td class="px-6 py-3">{{ file.getExtension() }}</td>
            <td class='px-2'>
				<time>{{ file.createdAt|format_datetime() }}</time>
			</td>
			<td class='px-2'>
				<time>{{ file.updatedAt|format_datetime() }}</time>
			</td>
        </tr>
	{% else %}
		<tr>
			<td colspan="6" class="px-6 py-3">{{ 'No Result Found'|trans }}</td>
		</tr>
	{% endfor %}
{% endblock %}
