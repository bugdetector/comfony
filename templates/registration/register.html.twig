{% extends 'security/login.html.twig' %}
{% block body %}
	<form class="card-body flex flex-col gap-5 p-10" id="register_form" method="post" data-turbo="false">
		{{ form_errors(registrationForm) }}
		<div class="text-center mb-2.5">
			<h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
				{% trans %}Register{% endtrans %}
			</h3>
			<div class="flex items-center justify-center my-5">
				<img src="{{ asset('assets/favicon.png') }}"/>
			</div>
			<div class="flex items-center justify-center font-medium">
				<a class="text-2sm link" href="{{ path('app_login') }}">
					{% trans %}Have an account?{% endtrans %}
				</a>
			</div>
		</div>
		{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.name) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
			{{ form_row(registrationForm.agreeTerms) }}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn btn-primary flex justify-center grow">
				{% trans %}Register{% endtrans %}
			</button>
		{{ form_end(registrationForm) }}
	</form>
{% endblock %}
