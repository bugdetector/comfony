{% extends 'security/login.html.twig' %}
{% block body %}
	<form class="card-body gap-5 p-10 w-full max-w-md mx-auto" id="register_form" method="post" data-turbo="false">
		{{ form_errors(registrationForm) }}
		<div class="text-center mb-4">
			<h3 class="text-lg font-medium mb-2.5">
				{% trans %}Register{% endtrans %}
			</h3>
			<div class="flex items-center justify-center my-5">
				<img class="dark:hidden h-16" src="{{ asset('assets/logo.png') }}" alt="{{ app_name }}"/>
				<img class="hidden dark:block h-16" src="{{ asset('assets/logo-dark.png') }}" alt="{{ app_name }}"/>
			</div>
			<div class="flex items-center justify-center font-medium">
				<a class="link link-primary text-sm" href="{{ path('app_login') }}">
					{% trans %}Have an account?{% endtrans %}
				</a>
			</div>
		</div>
		{{ form_start(registrationForm) }}
			<div class="form-control">
				{{ form_row(registrationForm.name) }}
			</div>
			<div class="form-control">
				{{ form_row(registrationForm.email) }}
			</div>
			<div class="form-control">
				{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
			</div>
			<div class="form-control">
				{{ form_row(registrationForm.agreeTerms) }}
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn btn-primary btn-block mt-4">
				{% trans %}Register{% endtrans %}
			</button>
		{{ form_end(registrationForm) }}
	</form>
{% endblock %}
