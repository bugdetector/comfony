{% extends 'security/login.html.twig' %}
{% block flashes %}{% endblock %}
{% block body %}
	<div class="w-full min-h-screen bg-gray-50 flex flex-col sm:justify-center items-center pt-4 sm:pt-0">
		<div class="w-full sm:max-w-md mx-auto">
			<h2 class="mb-12 text-center text-5xl font-extrabold">{% trans %}Reset your password{% endtrans %}</h2>
            {{ include('@base_theme/partials/flash_messages.html.twig') }}
			{% trans with {
				expire: resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle'),
				forgot_password_path: path('app_forgot_password_request')
			} %}reset_password.check_mail{% endtrans %}
			<div class="mt-6 text-center">
				<a href="{{ path('homepage') }}" class="btn-danger">
					<span class='i-tabler-chevron-left text-xl'></span>
					<span>{% trans %}Back to mainpage{% endtrans %}</span>
				</a>
			</div>
		</div>
	</div>

{% endblock %}
