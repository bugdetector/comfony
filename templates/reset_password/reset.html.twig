{% extends 'security/login.html.twig' %}
{% block body %}
	<form class="card-body flex flex-col gap-5 p-10" id="reset_password_form" method="post" data-turbo="false">
		{{ form_errors(resetForm) }}
		<div class="text-center mb-2.5">
			<h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
				{% trans %}Reset your password{% endtrans %}
			</h3>
			<div class="flex items-center justify-center my-5">
				<img src="{{ asset('assets/favicon.png') }}"/>
			</div>
		</div>
		{{ form_start(resetForm) }}
		{{ form_row(resetForm.plainPassword) }}
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<button class="btn btn-primary flex justify-center grow">
			{% trans %}Reset password{% endtrans %}
		</button>
		{{ form_end(resetForm) }}
	</form>
{% endblock %}
